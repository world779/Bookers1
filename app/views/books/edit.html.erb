<div class="show_visual">
	<h2>Editing Book</h2>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
				<div class="error">
					<div class="error_title">　<b><%= @book.errors.count %>errors prohibited this book from being saved:</b></div>
					<p class="error_item">
						<% @book.errors.full_messages.each do |message| %>
							・<%= message %><br>
						<% end %>
					</p>
				</div>

				<div class="validation_form">
					<div class="validation">Title</div>

					<%= f.text_field :title, :style=>"border:1px solid red"; %><br>

				</div>

				<div>
					<div class="validation2">Body</div>
					<div class="validation_form2">
						<%= f.text_area :body, :style=>"border:3px solid red";%>
					</div>
				<br>
				<%= f.submit "Update Book" %><br>

		<% else %>
				<font>Title</font><br>
				<%= f.text_field :title %><br>
				<font>Body</font><br>
				<%= f.text_area :body %><br>
				<%= f.submit "Update Book" %><br>
		<% end %>
	<% end %>

	<br>
	<%= link_to "Show", @book %>
	<font>|</font>
	<a href="/books">Back</a>
</div>